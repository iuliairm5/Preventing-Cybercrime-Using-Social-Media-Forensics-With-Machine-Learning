@model DisertatieIRIMIA.Models.MonitorizedUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>AccountLatestTweets</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-image: url('/images/background0.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
        .container {
            max-width: 400px;
            padding: 20px;
            background-color: #FAFAD2;
            border: 3px solid #ccc;
            border-radius: 5px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: black;
            font-size: 24px;
        }
        .form-group input[type="text"] {
            display: block;
            width: 100%;
            padding: 5px;
            font-size: 20px;
        }
        .form-group input[type="submit"] {
            background-color: #00BFFF;
            color: #000;
            padding: 10px 20px;
            border: 3px solid #ccc;
            border-radius: 5px;
            cursor: pointer;
            font-size: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <form asp-action="AccountLatestTweets" method="post">
            <div class="form-group">
                <label asp-for="Username">Extracting tweets with predictions from the account:</label>
                <input asp-for="Username" class="form-control" value="@Model.Username" readonly />
            </div>
            <input type="hidden" name="MonitorizationID" value="@Model.MonitorizationID" />
            <div class="form-group">
                <input type="submit" value="See predicted tweets!" class="btn btn-custom" />
            </div>
        </form>
    </div>
</body>
</html>





