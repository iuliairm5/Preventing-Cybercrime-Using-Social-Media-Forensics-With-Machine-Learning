@model IEnumerable<PREDICTION>

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_MyProfileLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
<style>
    body {
        position: relative;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        background-image: url('/images/background0.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed; /* Keep the background image fixed */
    }

    body::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url('/images/background0.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        opacity: 0.5; /* Adjust the opacity value (0.5) as desired */
        z-index: -1;
        background-attachment: fixed; /* Keep the background image fixed */
    }
     .btn-custom {
            border: 2px solid #000;
            padding: 5px 10px;
            color: #000;
            font-weight: bold;
            text-decoration: none;
            margin: 10px;
            display: inline-block;
            background-color: #FFCBA4;
        }
        table.table {
            background-color: #fff; /* Set table background color to white */
        }

        table.table th {
            background-color: lightgreen; /* Set column headers background color to light green */
        }
        table.table td {
        background-color: #f0ffff; /* Set table rows background color to white */
    }
</style>


</head>
<body>


<h1>My Predictions</h1>
@*
 
*@

<table class="table table-striped table-bordered table-sm">
    <tr>
        @*<th>PREDICTIONID</th>*@
        <th>NamePersonSocialMedia</th>
        <th>InputType</th>
        <th>Prediction</th>
        <th>DateTime</th>
        <th>Actions</th>
    </tr>
    @foreach (PREDICTION item in Model)
    {
        <tr>
            @*<td>@item.PREDICTIONID</td>*@
            <td>@item.NamePersonSocialMedia</td>
            <td>@item.InputType</td>
            <td>@item.Prediction</td>
            <td>@item.DateTime</td>

            <td class="text-center">
            
                @*<a asp-action="ViewInput" class="btn btn-sm btn-warning">
                    View Input
                </a>
                *@
                 <form 
                    asp-action="ViewInput" 
                    method="post" style="display: inline">
                    <input type="hidden" name="PREDICTIONID" value="@item.PREDICTIONID" />
                    <button type="submit" class="btn btn-sm btn-warning">
                        ViewInput
                    </button>
                </form>

                @*NEW*@

               

                <div style="display: inline-block;">
                 <a asp-action="Edit" asp-route-predictionID="@item.PREDICTIONID" class="btn btn-sm btn-primary">Edit name</a>
                </div>

                @*NEW*@

                <form 
                    asp-action="Delete" 
                    method="post" style="display: inline">
                    <input type="hidden" name="PREDICTIONID" value="@item.PREDICTIONID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
@*
        <div>
         <a asp-action="PredictURL" >Add URL for prediction</a> </div>
         <div>
         <a asp-action="PredictTweet">Add Tweet for prediction</a>
        </div>
        <div>
         <a asp-action="PredictMeme">Add Meme for prediction</a>
        </div>
        <div>
         <a asp-action="AccountDetails">See Twitter account details</a>
        </div>
        <div>
         <a asp-action="AccountLatestTweets">See Twitter account's latest tweets</a>
        </div>
*@

<div>
    <a asp-action="PredictURL" class="btn btn-custom">Add URL for prediction</a>
</div>
<div>
    <a asp-action="PredictTweet" class="btn btn-custom">Add Tweet for prediction</a>
</div>
<div>
    <a asp-action="PredictMeme" class="btn btn-custom">Add Meme for prediction</a>
</div>
<div>
    <a asp-action="AccountDetails" class="btn btn-custom">See Twitter account details</a>
</div>
<div>
    <a asp-action="AccountLatestTweets" class="btn btn-custom">See Twitter account's latest tweets</a>
</div>

        <button type="button" onclick="location.href='@Url.Action("MonitorizedUsers", "MyProfile")'"style="display: block; margin: 0 auto;">To My Monitored Users Page</button>

</body>
</html>